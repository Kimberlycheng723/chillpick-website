<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>ChillPick | Home</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="../css/app.css">
</head>
<body>

  <%- include('partials/header') %>

  <main class="container py-5">


    <!-- Welcome Section -->
    <div class="welcome-section">
      <h1>Welcome back!</h1>
      <p>Here's what we picked for you today</p>
    </div>

    <div class="row">
      <!-- Left Column - Recommendations -->
      <div class="col-lg-8">
        <div class="section-card">
          <div class="section-header">
            <h2 class="section-title">Recommended For You</h2>
          </div>

        <div class="row p-2">
          <% if (recommendations && recommendations.length > 0) { %>

              <% const movies = recommendations.filter(item => item.type === 'Movie'); %>
              <% const books = recommendations.filter(item => item.type === 'Book'); %>

              <% if (movies.length > 0) { %>
                <h3 class="section-label">Movies</h3>
                <hr class="divider">
                <div class="row">
                  <% movies.forEach(item => { %>
                    <div class="col-md-3 mb-3">
                      <div class="card media-card">
                        <a href="/movie_detail/<%= item.id %>" class="media-link">
                        <img src="<%= item.posterPath %>" alt="<%= item.title %> Poster" class="media-image">
                        <div class="card-body p-2">
                          <h5 class="card-title"><%= item.title %></h5>
                          <div class="card-description">
                            <%= item.type %> 路 
                            <%= Array.isArray(item.genre) ? item.genre.join('-') : item.genre %> 路 
                            <%= item.year %>
                          </div>
                        </div>
                        </a>
                      </div>
                    </div>
                  <% }) %>
                </div>
              <% } %>

              <% if (books.length > 0) { %>
                <h3 class="section-label">Books</h3>
                <hr class="divider">
                <div class="row">
                  <% books.forEach(item => { %>
                    <div class="col-md-3 mb-3">
                      <div class="card media-card">
                        <a href="/book_detail/<%= item.id %>" class="media-link">
                        <img src="<%= item.posterPath %>" alt="<%= item.title %> Poster" class="media-image">
                        <div class="card-body p-2">
                          <h5 class="card-title"><%= item.title %></h5>
                          <div class="card-description">
                            <%= item.type %> 路 
                            <%= item.author || 'Unknown Author' %> 路 
                            <%= item.year %>
                          </div>
                        </div>
                        </a>
                      </div>
                    </div>
                  <% }) %>
                </div>
              <% } %>

            <% } else { %>
              <p>No recommendations available.</p>
            <% } %>


  </div>
  </div>
  </div>

      <!-- Right Column - Top 3 Recently Added & Activity -->
      <div class="col-lg-4">
        <!-- Recently Added Section -->
        <div class="section-card">
          <div class="section-header">
            <h2 class="section-title">Recently Added</h2>
            <a href="/watchlist" class="see-all">View all</a>
          </div>

          <% if (recentlyAdded && recentlyAdded.length > 0) { %>
            <% recentlyAdded.forEach((item, index) => { %>
              <div class="small-media-card">
                <img src="<%= item.posterPath || item.image || '/images/placeholder.jpg' %>" 
                    alt="<%= item.title %> Poster" 
                    class="small-media-image"
                    onerror="this.src='/images/placeholder.jpg'">
                <div class="small-media-info">
                  <h5 class="added-title"><%= item.title %></h5>
                  <div class="added-description">
                    <%= item.type === 'movie' ? 'Movie' : item.type === 'book' ? 'Book' : item.type %>
                  </div>
                  <div class="status-badge plan-to-watch">
                    Plan to Watch
                  </div>
                </div>
              </div>
              <% if (index < recentlyAdded.length - 1) { %>
                <hr class="divider">
              <% } %>
            <% }) %>
          <% } else { %>
            <div class="no-content">
              <p>No items in your watchlist yet.</p>
              <a href="/discover" class="btn btn-primary btn-sm">Start discovering</a>
            </div>
          <% } %>

        </div>
<!-- Top 3 Recent Activity Section -->
<div class="rounded-4 shadow-sm overflow-hidden" style="background-color: #fff;">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center px-4 py-3" style="background-color: #fde68a;">
    <h5 class="mb-0 fw-bold" style="color: #1e1e1e;">Recent Activity</h5>
    
  </div>

  <!-- Activity List -->
  <% if (recentActivity && recentActivity.length > 0) { %>
    <% const filteredActivity = recentActivity.filter(a => a.activityType !== 'like').slice(0, 3); %>

    <% if (filteredActivity.length > 0) { %>
      <% filteredActivity.forEach((activity, index) => { %>
        <a href="<%= activity.detailUrl %>" class="d-flex align-items-center px-4 py-3 text-decoration-none" style="color: #111;">
          <!-- Avatar -->
          <div class="me-3 flex-shrink-0">
            <img src="<%= activity.profilePic || '/images/default-avatar.png' %>" 
                alt="avatar" 
                class="rounded-circle" 
                style="width: 48px; height: 48px; object-fit: cover;">
          </div>

          <!-- Text -->
          <div class="flex-grow-1 text-center">
            <div class="fw-medium" style="font-size: 0.95rem;">
              <% if (activity.activityType === 'review') { %>
                You reviewed <%= activity.itemTitle %>
              <% } else if (activity.activityType === 'reply') { %>
                You replied to a review of <%= activity.itemTitle %>
              <% } else if (activity.activityType === 'rating') { %>
                You rated <%= activity.itemTitle %> <%= activity.rating %> stars
              <% } else { %>
                You interacted with <%= activity.itemTitle %>
              <% } %>
            </div>
            <div class="text-muted small mt-1"><%= activity.timeAgo %></div>
          </div>
        </a>

        <% if (index < filteredActivity.length - 1) { %>
          <hr class="my-0" />
        <% } %>
      <% }) %>
    <% } else { %>
      <div class="px-4 py-3 text-center text-muted small">No recent activity</div>
    <% } %>
  <% } else { %>
    <div class="px-4 py-3 text-center text-muted small">No recent activity</div>
  <% } %>
</div>


</html>